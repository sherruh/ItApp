<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.anouncement.AnouncementActivity">

    <ProgressBar
        android:id="@+id/anouncement_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="340dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select vehicle mark"
        app:layout_constraintBottom_toTopOf="@+id/anouncement_spinner_mark"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp" />

    <Spinner
        android:id="@+id/anouncement_spinner_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toTopOf="parent"
        ></Spinner>


    <EditText
        android:id="@+id/anouncement_edit_year"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:hint="Year of car"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anouncement_spinner_mark" />

    <EditText
        android:id="@+id/anouncement_edit_city"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        android:hint="City"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anouncement_edit_year" />

    <EditText
        android:id="@+id/anouncement_edit_price"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:hint="Price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anouncement_edit_city" />

    <Button
        android:id="@+id/anouncement_buttona_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="192dp"
        android:text="Add anouncement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anouncement_edit_price" />

    <ImageView
        android:id="@+id/anouncement_image_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:background="#226D4A4A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anouncement_edit_price" />

    <ImageView
        android:id="@+id/anouncement_image_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="#226D4A4A"
        app:layout_constraintStart_toEndOf="@+id/anouncement_image_1"
        app:layout_constraintTop_toBottomOf="@+id/anouncement_edit_price" />

    <ImageView
        android:id="@+id/anouncement_image_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="#226D4A4A"
        app:layout_constraintStart_toEndOf="@+id/anouncement_image_2"
        app:layout_constraintTop_toBottomOf="@+id/anouncement_edit_price" />

    <ImageView
        android:id="@+id/anouncement_image_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="#226D4A4A"
        app:layout_constraintStart_toEndOf="@+id/anouncement_image_3"
        app:layout_constraintTop_toBottomOf="@+id/anouncement_edit_price" />

    <ImageView
        android:id="@+id/anouncement_image_camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_camera"
        app:layout_constraintStart_toEndOf="@+id/anouncement_image_3"
        app:layout_constraintTop_toBottomOf="@+id/anouncement_image_4" />

</androidx.constraintlayout.widget.ConstraintLayout>